<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/guide_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/ic_guide_1"
            />

        <ImageView
            android:id="@+id/guide_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/ic_guide_2"

            />

        <ImageView
            android:id="@+id/guide_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/ic_guide_3"

            />

        <RelativeLayout
            android:id="@+id/guide_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/ic_guide_4"
            >

            <ImageView
                android:id="@+id/guide_button"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                android:src="@mipmap/guide_start_button"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/guide_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/guide_selected"
                    />

                <ImageView
                    android:id="@+id/guide_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/guide_prompt"
                    />
            </LinearLayout>
        </RelativeLayout>

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/guide_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24.0dip"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="3dp"
            android:src="@drawable/navi_guide_selector"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="3dp"
            android:src="@drawable/navi_guide_selector"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="3dp"
            android:src="@drawable/navi_guide_selector"/>


    </LinearLayout>

</RelativeLayout>